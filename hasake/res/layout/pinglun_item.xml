<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="11dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_pinglun_face"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:src="@drawable/zhoujielu" />

        <RelativeLayout
            android:layout_width="180dip"
            android:layout_height="44dip"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@id/iv_pinglun_face"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_pinglun_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我评论了90后的声音"
                android:textColor="#393939" />

            <TextView
                android:id="@+id/tv_pinglun_name"
                android:textColor="#888888"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="哄自己入睡的第十一期写给未来。。。" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_pinglun_zhuanji"
            android:layout_width="44dip"
            android:layout_height="44dip"
            android:layout_alignParentRight="true"
            android:src="@drawable/zhoujielu" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/pinglun_msg"
        android:paddingBottom="5dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/tv_pinglun_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="很不错哦"
            android:textColor="#393939"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_pinglun_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="2天前"
            android:textColor="#888888"
            android:textSize="11sp" />
    </RelativeLayout>

</LinearLayout>