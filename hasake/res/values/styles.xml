<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
     -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
         -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">@drawable/tab_up</item>
    </style>
    <!-- titile bar yangshi -->
    <style name="hask_title_bar" parent="android:Theme.Light">
        <item name="android:windowTitleSize">50dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

    <style name="home_tab_style">
        <item name="android:textColor">#393939</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="my_home_tv_style">
        <item name="android:textColor">@color/color_7f7f7f</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="my_home_ll_bg">
        <item name="android:background">@color/color_ecf0fa</item>
    </style>

    <style name="banner_point">
        <item name="android:background">@drawable/banner_check</item>
        <item name="android:button">@null</item>
    </style>

</resources>