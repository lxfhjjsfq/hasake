<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tingshu.hasake"
    android:versionCode="100"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tingshu.hasake.MainActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.tingshu.hasake.ui.activity.PlayActivity" android:screenOrientation="portrait" >
                        <!--intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter-->
        </activity>
        <activity android:name="com.tingshu.hasake.ui.activity.FansActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.tingshu.hasake.ui.activity.SpecialActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.tingshu.hasake.ui.activity.ZanActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.tingshu.hasake.ui.activity.HistoryActivity" android:screenOrientation="portrait"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>