<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/act_create_album_add_type"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_margin="10dip"
                android:background="@drawable/fans_add" />

            <TextView
                android:id="@+id/act_create_album_type_name"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_margin="10dip"
                android:background="#ffaaaaaa"
                android:gravity="center"
                android:hint="选择分类"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/act_create_album_edit_name"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_margin="10dip"
                android:background="#ffaaaaaa"
                android:gravity="center"
                android:hint="专辑名称"
                android:textSize="18sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/act_create_album_edit_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dip"
            android:background="#ffaaaaaa"
            android:gravity="center"
            android:hint="专辑描述"
            android:textSize="18sp" />
        <Button 
            android:id="@+id/act_create_album_create_button"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_margin="10dip"
            android:background="#3568af"
            android:text="创建"/>
    </LinearLayout>

</FrameLayout>